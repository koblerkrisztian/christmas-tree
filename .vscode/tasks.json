{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Firmware",
      "type": "shell",
      "command": "make all",
      "options": {
        "cwd": "${workspaceRoot}/nodemcu-fw",
        "shell": {
          "executable": "bash.exe",
          "args": ["-c"]
        }
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Flash firmware",
      "type": "shell",
      "command": "make flash4m ESPPORT=/dev/${input:portName}",
      "options": {
        "cwd": "${workspaceRoot}/nodemcu-fw",
        "shell": {
          "executable": "bash.exe",
          "args": ["-c"]
        }
      },
      "problemMatcher":"$gcc"
    }
  ],
  "inputs": [
    {
      "id": "portName",
      "description": "Name of the port. For example 'ttyS4'",
      "default": "ttyS4",
      "type": "promptString"
    }
  ]
}